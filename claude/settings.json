{
  "permissions": {
    "allow": [
      "WebFetch",
      "Fetch",
      "Bash(gh run view:*)",
      "Bash(gh workflow view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue list:*)",
